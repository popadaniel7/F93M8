#include "Ifx_Types.h"

#define NVM_NO_BLOCKS               3U//4U
#define NVM_SIZE_HEADER_BYTES       8U// Data-flash write done in 8 bytes at a time

typedef struct
{
        uint8 blockId;
        uint16 blockSize;
        uint8 padding1;
        uint32 padding2;
}Nvm_Header_t;

typedef struct
{
        uint16 blockSize;
        uint32 blockAddress;
        uint16 padding1;
}Nvm_NvStat_t;

typedef struct
{
        uint32* data;
        uint32 crc;
}Nvm_BlockData_t;

extern uint32 Nvm_CurrentWriteAddress;
extern uint32 Nvm_CurrentReadAddress;
extern uint32 Nvm_SectorSwitchActivated;
extern uint32 Nvm_CurrentSector;
extern uint32 Nvm_

extern uint8 Nvm_WriteAllFinished;
extern uint8 Nvm_ReadAllFinished;
